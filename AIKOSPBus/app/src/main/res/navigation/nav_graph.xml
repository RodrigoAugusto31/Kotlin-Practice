<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.aikospbus.MainFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_mapsFragment"
            app:destination="@id/mapsFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_busCorridorFragment"
            app:destination="@id/busCorridorFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_busLinesFragment"
            app:destination="@id/busLinesFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_busLocationFragment"
            app:destination="@id/busLocationFragment" />
        <action
            android:id="@+id/action_FirstFragment_to_busStopsFragment"
            app:destination="@id/busStopsFragment" />
    </fragment>
    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.aikospbus.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.example.aikospbus.feature_map.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/busCorridorFragment"
        android:name="com.example.aikospbus.feature_bus_corridor.BusCorridorFragment"
        android:label="fragment_bus_corridor"
        tools:layout="@layout/fragment_bus_corridor" />
    <fragment
        android:id="@+id/busLinesFragment"
        android:name="com.example.aikospbus.feature_bus_lines.BusLinesFragment"
        android:label="fragment_bus_lines"
        tools:layout="@layout/fragment_bus_lines" />
    <fragment
        android:id="@+id/busLocationFragment"
        android:name="com.example.aikospbus.feature_bus_location.presentation.BusLocationFragment"
        android:label="fragment_bus_location"
        tools:layout="@layout/fragment_bus_location" />
    <fragment
        android:id="@+id/busStopsFragment"
        android:name="com.example.aikospbus.feature_bus_stops.BusStopsFragment"
        android:label="fragment_bus_stops"
        tools:layout="@layout/fragment_bus_stops" />
</navigation>